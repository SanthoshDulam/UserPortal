<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UserPortal</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UserPortal.styles.css" asp-append-version="true" />
</head>

<body>

    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <!-- Brand (NO LOGO HERE) -->
                <a class="navbar-brand" asp-area="" asp-controller="Account" asp-action="Login">
                    UserPortal
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                </div>

            </div>
        </nav>
    </header>

    <!-- MAIN CONTENT -->
    @{
        // Remove the container ONLY for the Login page
        var isLoginPage = ViewContext.RouteData.Values["action"]!.ToString() == "Login";
    }

    <div class="@(isLoginPage ? "" : "container")">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2025 - UserPortal
        </div>
    </footer>

    <!-- SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
