@model UserPortal.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Register" method="post" class="mt-3">
    <div>
        <label asp-for="FirstName"></label><br />
        <input asp-for="FirstName" /><br />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="LastName"></label><br />
        <input asp-for="LastName" /><br />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Phone"></label><br />
        <input asp-for="Phone" /><br />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Email"></label><br />
        <input asp-for="Email" /><br />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" type="password" /><br />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="ConfirmPassword"></label><br />
        <input asp-for="ConfirmPassword" type="password" /><br />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>


    <button type="submit">Register</button>
    <a asp-action="Login">Already have account? Login</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
